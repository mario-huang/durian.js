{
  "name": "durian.js",
  "version": "0.0.1",
  "description": "Run NestJS on Bun Fastly",
  "author": "mario-huang",
  "license": "MIT",
  "keywords": [
    "durian",
    "durianjs",
    "nest",
    "nestjs",
    "bun"
  ],
  "scripts": {
    "build": "bun build ./src/main.ts --outdir ./dist --target bun --sourcemap",
    "start": "bun run ./src/main.ts",
    "start:debug": "bun --inspect ./src/main.ts",
    "start:dev": "bun --watch run ./src/main.ts",
    "start:prod": "bun run ./dist/main.js",
    "compile": "TARGET=${TARGET:-bun} && bun build ./src/main.ts --target ${TARGET} --sourcemap --compile --outfile main-${TARGET}",
    "compile:linux-x64": "TARGET=bun-linux-x64 bun run compile",
    "compile:linux-arm64": "TARGET=bun-linux-arm64 bun run compile",
    "compile:windows-x64": "TARGET=bun-windows-x64 bun run compile",
    "compile:darwin-x64": "TARGET=bun-darwin-x64 bun run compile",
    "compile:darwin-arm64": "TARGET=bun-darwin-arm64 bun run compile",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "test:debug": "echo TODO",
    "test:e2e": "echo TODO"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.11.1",
    "@grpc/proto-loader": "^0.7.13",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.4.1",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.4.1",
    "@nestjs/websockets": "^10.4.1",
    "amqp-connection-manager": "^4.1.14",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "ioredis": "^5.4.1",
    "kafkajs": "^2.2.4",
    "mqtt": "^5.10.0",
    "nats": "^2.28.2",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bun": "^1.1.6",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
